<body>
  <h1>Har bostadsbubblan spruckit?</h1>
  <button id="checkBtn">Klicka för att se svaret</button>
  <p id="answer" style="display:none;">Nej! Kolla gärna igen imorgon!</p>
  <p id="counter"></p>

  <script>
    const btn = document.getElementById("checkBtn");
    const answer = document.getElementById("answer");
    const counterEl = document.getElementById("counter");

    btn.addEventListener("click", () => {
      answer.style.display = "block";

      // Öka räknaren via CounterAPI
      fetch("https://counterapi.dev/api/bostadsbubblan/visits/up", {
        headers: {
          "Authorization": "Bearer ut_imeOqlsTP7gxfF3g5ocdIXchEsD7OcHQJIeXN3Ph"
        }
      })
      .then(res => res.json())
      .then(data => {
        counterEl.innerText =
          "Så här många personer har hittills kollat: " + data.count;
      })
      .catch(() => {
        counterEl.innerText = "(kunde inte hämta räknaren just nu)";
      });
    });
  </script>
